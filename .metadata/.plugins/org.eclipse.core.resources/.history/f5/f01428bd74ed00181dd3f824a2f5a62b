#include "hw_config.h"
#include "drv_adxl345.h"
#include "drv_spi.h"
#include "drv_gpio.h"
#include "drv_usart.h"
#include "tools_lib.h"
#include "string.h"

void init_adxl345()
{

}

void adxl345_write(vu8 addr, vu8* buffer, vu8 size)
{
//  led_set(globalV.ledStat = !globalV.ledStat);
  vu8 i;
  gpio_set(ADXL345_GPIO, ADXL345_NSS, LOW);
  spiInOut(ADXL345_SPI, addr | 0x80);
  for(i = 0; i < size; i++)
  {
    spiInOut(ADXL345_SPI, buffer[i]);
  }
  gpio_set(ADXL345_GPIO, ADXL345_NSS, HIGH);
}

void adxl345_read(vu8 addr, vu8* buffer, vu8 size)
{
//  led_set(globalV.ledStat = !globalV.ledStat);
  vu8 i;
  gpio_set(ADXL345_GPIO, ADXL345_NSS, LOW);
  spiInOut(ADXL345_SPI, addr & 0x7F);
  for(i = 0; i < size; i++)
  {
    buffer[i] = spiInOut(ADXL345_SPI, 0);
  }
  gpio_set(ADXL345_GPIO, ADXL345_NSS, HIGH);
}
