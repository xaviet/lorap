#ifndef HW_CONFIG_H_
#define HW_CONFIG_H_

#include "stm32f10x.h"

//|--------------|
//|  0x8003ffff  |
//|              |  upgrade data (120K Bytes)
//|  0x08022000  |
//|--------------|
//|  0x08021fff  |
//|              |  app prog (120K Bytes)
//|  0x08004000  |
//|--------------|
//|  0x08003fff  |
//|              |  env data (2K Bytes)
//|  0x08003800  |
//|--------------|
//|  0x080037ff  |
//|              |  bootloader (14K Bytes)
//|  0x08000000  |
//----------------
#define UPGRADE_DATA_ADDRESS ((void*)0x08022000)
#define APP_PROG_ADDRESS ((void*)0x08004000)
#define FLASH_SECTOR_NUM 128
#define FLASH_SECTOR_SIZE 2048
#define DATA_SIZE ((u32)(120 * FLASH_SECTOR_SIZE))

#endif /* HW_CONFIG_H_ */
