#ifndef CONFIG_H_
#define CONFIG_H_

#include "stm32f10x.h"

//|--------------|
//|  0x8003fff   |
//|              |  upgrade data (120K Bytes)
//|  0x0802200   |
//|--------------|
//|  0x08021fff  |
//|              |  app data (120K Bytes)
//|  0x08004000  |
//|--------------|
//|  0x08003fff  |
//|              |  env data (2K Bytes)
//|  0x08003800  |
//|--------------|
//|  0x080037ff  |
//|              |  bootloader (14K Bytes)
//|  0x08000000  |
//----------------
FLASH_MAX_ADDR
#define UPGRADE_DATA_ADDRESS ((void*)0x08009400)
#define APP_PROG_ADDRESS ((void*)0x08002C00)

#define DATA_SIZE ((u32)(26 * 1024))
#define CRC8POLY 0x07 // // X8 + X2 + X1 + 1

#endif /* CONFIG_H_ */
